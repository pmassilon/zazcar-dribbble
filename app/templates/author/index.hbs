<div class="row">
  <div class="col-xs-12">
    <section id="skills">
      <div class="row">
        <div class="col-xs-12 col-sm-3">
          <div class="row">
            <div class="col-xs-12">
              <!-- Perfil Author -->
              {{ dribbble-author dg=model.author.data }}
            </div>
          </div>            
        </div>  
        <div class="col-xs-12 col-sm-9">
          <div class="row">
            <!-- Loop shots popular of author -->
  					{{#each model.pictures.data as |dg|}}
              <div class="col-xs-12 col-sm-4">
                {{ dribbble-pictures dg=dg username=model.author.data.username }}
              </div>
            {{/each}}
          </div>
        </div>  
      </div>
    </section>
  </div>
</div>
