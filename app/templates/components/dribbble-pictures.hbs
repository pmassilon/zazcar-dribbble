<div class="box">
	<div class="box-picture">
		{{#link-to "author.picture" username dg.id replace=true}}
			<img src="{{ dg.images.normal }}" class="img-responsive" alt="{{ dg.title }}" title="{{ dg.title }}"/>
		{{/link-to}}
	<span class="box-link">
		<a href={{ dg.html_url}} target="_blank"> 
  		<i class="fa fa-external-link"></i>
  	</a>
	</span>
	<div class="box-picture-bar">
		<span>
			<i class="fa fa-eye"></i>
  		{{ dg.views_count }}
		</span> 		
		<span>
			<i class="fa fa-comments"></i>
  		{{ dg.comments_count }}
		</span> 		
		<span>
			<i class="fa fa-heart"></i>
  		{{ dg.likes_count }}
		</span> 		
		</div>
	</div>
	
	<h4 class="box-title curt" title="{{ dg.title }}">{{ dg.title }}</h4>
</div>

