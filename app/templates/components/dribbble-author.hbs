<div class="box">	
  <div class="box-author">
  	<div class="media">
  		<div class="media-left">
		  	<img src="{{ dg.avatar_url }}" />  			
  		</div>
  		<div class="media-body">
  			<h4 class="media-heading text-left">
					{{#link-to "author" dg.username replace=true}}
						{{ dg.name }} 	
					{{/link-to}}
				</h4>
  		</div>
  	</div>
	</div>
  <ul class="list-unstyled list-author text-left">
    <li>
      {{ dg.name }} - {{ dg.username }}
    </li>
    <li>

      <i class="fa fa-map-marker"></i>
      {{ dg.location }}
    </li>
    <li>
      <a href={{ dg.links.web}} target="_blank"> 
        <i class="fa fa-globe"></i>
      </a>   
      <a href={{ dg.links.twitter}} target="_blank"> 
        <i class="fa fa-twitter"></i>
      </a> 
      <a href={{ dg.html_url}} target="_blank"> 
        <i class="fa fa-dribbble"></i>
      </a>
    </li>
    <li>
      <p>
        {{{ dg.bio }}}
      </p>
    </li>
  </ul>
</div>
