<!-- components to description shot -->

<div class="box">
	<div class="box-picture">
		{{#link-to "author.picture" dg.user.username dg.id replace=true}}
			<img src="{{ dg.images.normal }}" class="img-responsive" alt="{{ dg.title }}" title="{{ dg.title }}"/>
		{{/link-to}}
		<span class="box-link">
			<a href={{ dg.html_url}} target="_blank"> 
	  		<i class="fa fa-external-link"></i>
	  	</a>
		</span>

		<div class="box-picture-bar">
			<span>
				<i class="fa fa-eye"></i>
	  		{{ dg.views_count }}
			</span> 		
			<span>
				<i class="fa fa-comments"></i>
	  		{{ dg.comments_count }}
			</span> 		
			<span>
				<i class="fa fa-heart"></i>
	  		{{ dg.likes_count }}
			</span> 		
		</div>
	</div>
	
	<div class="box-body">
	
		<h3 class="box-title" title="{{ dg.user.name }}">{{ dg.user.name }}</h3>

		
	  <div class="box-author">
	  	<div class="media">
	  		<div class="media-left">
			  	<img src="{{ dg.user.avatar_url }}" alt="{{ dg.user.name }}" title="{{ dg.user.name }}"/>  			
	  		</div>
	  		<div class="media-body">
	  			<h4 class="media-heading text-left" title="{{ dg.user.name }}">
						{{#link-to "author" dg.user.username replace=true}}
							{{ dg.user.name }} - {{ dg.user.username }} 	
						{{/link-to}}
					</h4>
	  		</div>
	  	</div>
		</div>
	  <ul class="list-unstyled list-author text-left">
	    <li>
	      <a href={{ dg.html_url}} target="_blank" title="{{ dg.title }}"> 
	        <i class="fa fa-dribbble"></i>
	        {{ dg.title }}
	      </a>
			</li>
	    <li>
	 			{{{ dg.description }}}
			</li>
		</ul>
	</div>		
</div>

